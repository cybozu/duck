{
  "name": "@cybozu/duck",
  "description": "Serves and builds an app with Google Closure Compiler/Library/Templates. An alternative to plovr.",
  "version": "0.35.4",
  "author": "Cybozu, Inc.",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.17"
  },
  "type": "module",
  "main": "dist/compiler.js",
  "types": "dist/compiler.d.ts",
  "bin": {
    "duck": "bin/duck.js"
  },
  "files": [
    "bin",
    "dist",
    "types/google-closure-deps.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "run-p lint:*",
    "lint:tsc": "tsc -p tsconfig.test.json",
    "lint:eslint": "eslint --ext js,ts src test types examples",
    "fix": "npm run lint:eslint -- --fix",
    "test": "npm-run-all clean -p lint build -s unit:coverage --aggregate-output -l",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "release": "run-s build lint && standard-version",
    "release:dryrun": "standard-version --dry-run"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/static": "^6.10.2",
    "@teppeis/stream-to-observable": "^0.3.1",
    "chokidar": "^3.5.3",
    "common-tags": "^1.8.2",
    "execa": "^8.0.1",
    "faastjs": "^6.4.11",
    "fast-glob": "^3.3.1",
    "fastify": "^4.22.0",
    "google-closure-deps": ">=20210406.0.0",
    "listr": "^0.14.3",
    "merge-options": "^3.0.4",
    "p-settle": "^5.1.0",
    "pino": "^8.15.0",
    "pino-pretty": "^9.4.1",
    "rimraf": "^5.0.1",
    "rxjs": "^6.6.7",
    "semver": "^7.5.4",
    "split2": "^4.2.0",
    "strip-json-comments": "^5.0.1",
    "tempy": "3.0.0",
    "workerpool": "^6.4.2",
    "xmlbuilder": "^15.1.1",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "google-closure-compiler": ">=20180910.1.0"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^22.0.0",
    "@types/common-tags": "^1.8.1",
    "@types/listr": "^0.14.4",
    "@types/node": "~18.17.12",
    "@types/rimraf": "^4.0.5",
    "@types/semver": "^7.5.1",
    "@types/split2": "^4.2.0",
    "@types/workerpool": "^6.4.1",
    "@types/yargs": "^17.0.24",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "google-closure-compiler": "^20230802.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "standard-version": "^9.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "homepage": "https://github.com/cybozu/duck",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cybozu/duck.git"
  },
  "bugs": {
    "url": "https://github.com/cybozu/duck/issues"
  },
  "keywords": [],
  "license": "MIT"
}
