{
  "extends": [
    "teppeis/es2019",
    "teppeis/+node",
    "teppeis/+typescript",
    "teppeis/+prettier",
    "teppeis/+mocha"
  ],
  "rules": {
    "require-await": 0,
    "@typescript-eslint/no-object-literal-type-assertion": 0,
    "@typescript-eslint/no-unnecessary-type-assertion": 0,
    "@typescript-eslint/restrict-plus-operands": 0
  },
  "parserOptions": {
    "project": null
  },
  "overrides": [
    {
      "files": [
        "src/dependency-parser-worker.ts",
        "src/dependency-parser-wrapper.ts",
        "test/dependency-parser.ts"
      ],
      "rules": {
        "node/no-missing-import": [
          "error",
          {
            "allowModules": [
              "worker_threads"
            ]
          }
        ]
      }
    }
  ]
}